<!-- DESCRIPTION: Allows the admin to view all routes. -->
<Window x:Class="TMS_Service.Admin.RouteWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TMS_Service.Admin"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Route Viewer" Height="450" Width="800">
    <Grid>
        <DockPanel>
            <DataGrid x:Name="dgInfoRoute" Margin="0,0,0,53.5" Width="770"/>
        </DockPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="344,378,22,6.5" Width="429">
            <Button x:Name="btnBack" Content="Back" Width="85" Margin="5" Click="btnBack_Click"/>
        </StackPanel>
    </Grid>
</Window>
