<!-- DESCRIPTION: Allows the creation of a backup. -->
<Window x:Class="TMS_Service.Admin.Backup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TMS_Service.Admin"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Backup" Height="124.266" Width="573.106">
    <Grid>
        <StackPanel Margin="10">

            <StackPanel Orientation="Horizontal">
                <Label Content="Backup Directory : " Height="25" Width="Auto" VerticalAlignment="Top"/>
                <TextBox x:Name="directoryPath" Height="25" Width="350" VerticalAlignment="Top" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="266,0,4,0" Height="59">
                <Button x:Name="create" Content="Create Backup" Width="96" HorizontalAlignment="Right" Margin="95,6,50,20" Click="createBackup_Click"/>
            </StackPanel>

        </StackPanel>
    </Grid>
</Window>
