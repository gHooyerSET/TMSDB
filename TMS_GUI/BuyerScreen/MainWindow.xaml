<Window x:Class="BuyerScreen.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BuyerScreen"
        mc:Ignorable="d"
        Title="Buyer Window" Height="450" Width="800">
    <Grid>
        <DockPanel>
            <Menu DockPanel.Dock="Top" HorizontalAlignment="Stretch" Height="18" VerticalAlignment="Top">
                <MenuItem Header="File">
                    <MenuItem x:Name="logout" Header="Logout" Click="logout_Click"/>
                </MenuItem>
                <MenuItem Header="Contract Marketplace">
                    <MenuItem x:Name="newCustomer" Header="Accept New Customer" Click="newCustomer_Click"/>
                    <MenuItem x:Name="reviewCustomers" Header="Review Customers" Click="reviewCustomers_Click"/>
                    <MenuItem x:Name="createOrder" Header="Create Order" Click="createOrder_Click"/>
                    <MenuItem x:Name="completedOrders" Header="Completed Orders" Click="completedOrders_Click"/>
                </MenuItem>
            </Menu>
        </DockPanel>
    </Grid>
</Window>
